<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3aa8c1"
        tools:context=".CounselActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Proffesionals"
                android:textSize = "30sp"
                android:textColor="@color/white"
                android:layout_margin="20dp"/>

        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="7"
                android:columnCount="1"
                android:layout_margin="5dp"
                android:alignmentMode="alignMargins"
                android:layout_gravity="center_horizontal"
                android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#ffffcc"
                    app:cardElevation="5dp"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                    <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:id="@+id/mary"
                            android:src="@drawable/pix"
                            android:layout_marginTop="18dp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mary_smith"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#ffcccc"
                    app:cardElevation="5dp"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                    <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:id="@+id/Mulisa"
                            android:src="@drawable/fin"
                            android:layout_marginTop="18dp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mulisa Mudau"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#ffcc00"
                    app:cardElevation="5dp"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                    <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:id="@+id/Rachel"
                            android:src="@drawable/plack"
                            android:layout_marginTop="18dp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rachel Baloyi"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#66ffcc"
                    app:cardElevation="5dp"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                    <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:id="@+id/Steve"
                            android:src="@drawable/la"
                            android:layout_marginTop="18dp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Steve Miles"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#9933ff"
                    app:cardElevation="5dp"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                    <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:id="@+id/Moses"
                            android:src="@drawable/plo"
                            android:layout_marginTop="18dp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moses Duduzane"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#9933ff"
                    app:cardElevation="5dp"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                    <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:id="@+id/Murunwa"
                            android:src="@drawable/ye"
                            android:layout_marginTop="18dp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Murunwa Mulaudzi"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#ffff00"
                    app:cardElevation="5dp"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                    <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:id="@+id/Melrose"
                            android:src="@drawable/naidoo"
                            android:layout_marginTop="18dp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Melrose Naidoo"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>

    </LinearLayout>

</ScrollView>
